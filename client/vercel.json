{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "rootDirectory": "client",
  "cleanUrls": true,
  "routes": [
    { "src": "/(.*)", "dest": "client/dist/index.html" }
  ]
}
